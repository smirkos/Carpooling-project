<?xml version="1.0" encoding="utf-8"?>


	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:facebook="http://schemas.android.com/apk/res-auto"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical" android:background="#368728">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="horizontal" android:layout_gravity="center" android:background="#f3f3f3"
                android:visibility="gone">
			<com.facebook.widget.ProfilePictureView
					android:id="@+id/selection_profile_pic"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:layout_gravity="center|left"
					android:gravity="center_horizontal"
					facebook:preset_size="small"
                    />
			<TextView
					android:id="@+id/selection_user_name"
					android:layout_width="0dip"
					android:layout_height="48dp"
					android:layout_marginLeft="10dp"
					android:layout_gravity="center|right"
					android:textColor="#0a0a0a"
					android:textSize="18sp" android:hint="Nome Utente" android:layout_weight="2"
                    android:lines="2"/>

        </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtInfo_selection_trip"
            android:id="@+id/txtInfo_selection_trip" android:layout_gravity="center" android:layout_marginTop="90dp"
            android:autoText="false" android:textStyle="bold" android:textSize="17sp"
            android:gravity="center"/>
    <ExpandableListView
			android:id="@+id/listViewPost"
			android:layout_width="match_parent"
            android:layout_height="match_parent"
			android:fastScrollEnabled="true"
			android:footerDividersEnabled="true"
			android:smoothScrollbar="true"
			android:layout_marginTop="3dp"
            android:drawSelectorOnTop="false" android:minHeight="55dp"
            android:longClickable="true" android:background="@android:color/transparent" android:visibility="visible"/>
</LinearLayout>
